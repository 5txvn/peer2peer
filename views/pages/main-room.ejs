    <div id="messages"></div>
    <div class="form">
      <input
        type="text"
        name="message"
        id="message"
        placeholder="Send a Message ðŸ’¬"
        autofocus
        autocomplete="off"
      />
    </div>
  </body>
  <style>
      .form {
    bottom: 0;
    margin-bottom: 3%;
    margin-left: 3%;
    position: fixed;
    width: 100%;
  }
  input {
    width: 95%;
    border-color: black;
    border-radius: 5px;
  }
  #messages {
    overflow: auto;
    height: 75%;
    position: fixed;
    width: 100%;
    margin-left: 3%;
    margin-top: 2%;
  }
  ::-webkit-scrollbar {
    width: 0; /* Remove scrollbar space */
    background: transparent; /* Optional: just make scrollbar invisible */
  }
  body {
    color: white;
    background-color:#cbf3f0;
}
p {
  background-color: #2ec4b6;
  padding: 4px;
  border-radius: 10px 10px 10px 0px;
  width: fit-content;
}
#message {
  border-style: none;
  padding-left: 1%;
}
#message:focus {
  outline: none;
}
nav {
    background-color:#2ec4b6;
}
  </style>
  <script>
      const thing = document.getElementById("message")
      thing.addEventListener("keydown", (event) => {
  if (event.key === "Enter") {
    sendMessage();
  }
});
const scrollDown = () => document.getElementById("messages").scrollTop = document.getElementById("messages").scrollHeight;

      const socket = io();
socket.on("reload", () => {
    window.location.reload()
})
      const cookie = document.cookie.split("; ").reduce((prev, current) => {
        const [name, ...value] = current.split("=");
        prev[name] = value.join("=");
        return prev;
      }, {});

      const resetInput = () => {
        $("#message").val("");
        scrollDown()
      }

      const msg = (string) => $("#messages").append(string);

      socket.on("recieve", (data) => {
        data[0] = data[0].replace(/</g, "&lt;").replace(/>/g, "&gt;");
        data[1] = data[1].replace(/</g, "&lt;").replace(/>/g, "&gt;");
          $("#messages").append(`<p><b>${data[0]}</b>: ${data[1]}</p>`);
          scrollDown();
      })

      function sendMessage() {
          const message = $("#message").val();
          switch(message) {
            //peer2peer version
            case "/version":
              msg(`<p>Server: You are currently running Peer2Peer version 1.0.0</p>`);
              resetInput()
              break;
            case "/help":
              msg(`<p>Server: Coming soon.</p>`)
              resetInput()
              break;
            case "/clear":
              $("#messages").empty();
              msg(`<p>Server: Chat cleared.</p>`)
              resetInput()
              break;
            case "/reload":
              window.location.reload();
              resetInput()
              break;
            case "/exit":
              window.location.href = "/";
              resetInput()
              break;
            //site pages
            case "/about":
              window.location.href = "/about";
              break;
            case "/submit-question":
              window.location.href = "/submit-question";
              break;
            case "/dashboard":
              window.location.href = "/dashboard";
              break;
            case "/resources":
              window.location.href = "/resources";
              break;
            case "/feedback":
              window.location.href = "/feedback";
              break;
            //os info ig
            //page shortcuts
            case "/clever":
              window.location.href = "https://clever.com/";
              resetInput()
              break;
            case "/khan-academy":
            case "/khanacademy":
              window.location.href = "https://www.khanacademy.org/";
              resetInput()
              break;
            case "/openstax":
              window.location.href = "https://openstax.org/";
              resetInput()
              break;
            case "/drive":
            case "/google-drive":
            case "/googledrive":
              window.location.href = "https://drive.google.com/drive/my-drive";
              resetInput()
              break;
            case "/docs":
            case "/google-docs":
            case "/googledocs":
              window.location.href = "https://docs.google.com/";
              resetInput()
              break;
            case "/slides":
            case "/google-slides":
            case "/googleslides":
              window.location.href = "https://docs.google.com/presentation/";
              resetInput()
              break;
            case "/sheets":
            case "/google-sheets":
            case "/googlesheets":
              window.location.href = "https://docs.google.com/spreadsheets/";
              resetInput()
              break;
            case "/quizlet":
              window.location.href = "https://quizlet.com/";
              resetInput()
              break;
            case "/quizizz":
              window.location.href = "https://quizizz.com/";
              resetInput()
              break;
            case "/kahoot":
              window.location.href = "https://kahoot.com/";
              resetInput()
              break;
            case "/plickers":
              window.location.href = "https://plickers.com/";
              resetInput()
              break;
            case "/mathway":
              window.location.href = "https://mathway.com/";
              resetInput()
              break;
            case "/desmos":
              window.location.href = "https://www.desmos.com/";
              resetInput()
              break;
            case "/omni-calculator":
            case "/omnicalculator":
              window.location.href = "https://www.omnicalculator.com/";
              resetInput()
              break;
            case "/calculator-soup":
            case "/calculatorsoup":
              window.location.href = "https://www.calculatorsoup.com/";
              resetInput()
              break;
            case "/grammarly":
              window.location.href = "https://www.grammarly.com/";
              resetInput()
              break;
            case "/flocabulary":
              window.location.href = "https://www.flocabulary.com/";
              resetInput()
              break;
            case "/stack-overflow":
            case "/stackoverflow":
              window.location.href = "https://stackoverflow.com/";
              resetInput()
              break;
            default:
            socket.emit('message', [cookie.username, message]);
            $("#message").val("");
          }
      }
      socket.emit("get-messages")
      socket.on("messages", (data) => {
          data.forEach(message => {
                $("#messages").append(`<p><b><a style="text-decoration:none;color:white;" href="/user/${message[0]}">${message[0]}</a></b>: ${message[1]}</p>`);
          })
          scrollDown();
          $("#messages").append(``)
      })
  </script>
