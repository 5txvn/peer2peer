const scrollDown = () => (messages.scrollTop = messages.scrollHeight);

      const socket = io();

      const cookie = document.cookie.split("; ").reduce((prev, current) => {
        const [name, ...value] = current.split("=");
        prev[name] = value.join("=");
        return prev;
      }, {});

      socket.on("recieve", (data) => {
