<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Peer2Peer</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="style.css" />
    <script src="script.js"></script>
    <script src="/scripts/socket.io.js"></script>
    <link rel="icon" href="/assets/icon.png" type="image/x-icon" />
    <script>
        const socket = io();

socket.on("reload", () => {
    window.location.reload();
});
    </script>
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="main">
      <h1 id="title">Peer2Peer</h1>
      <h1 id="emojirandom"></h1>
      <h3 id="subheading">
        <i
          >The <span class="text-danger">only</span> site for homework help you
          will ever need</i
        >
      </h3>
      <button class="signup bg-primary">
        <a href="/signup" style="color: white; text-decoration: none"
          >Sign Up Today</a
        >
      </button>
      <br />
      <button class="login bg-info">
        <a href="/login" style="color: white; text-decoration: none">Log In</a>
      </button>
    </div>
  </body>
  <style>
    .main {
      position: absolute;
      left: 50%;
      top: 50%;
      -webkit-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
      text-align: center;
      width: 100%;
    }
    #subheading {
      margin-top: 4.5%;
      font-size: 48px;
    }
    #title {
      font-size: 120px;
    }

    .signup {
      color: white;
      border-style: none;
      padding: 10px;
      font-size: 24px;
      border-radius: 10px;
      margin-top: 3.5%;
      padding-left: 25px;
      padding-right: 25px;
    }

    .login {
      color: white;
      border-style: none;
      padding: 10px;
      font-size: 24px;
      border-radius: 10px;
      margin-top: 3.5%;
      padding-left: 25px;
      padding-right: 25px;
    }
  </style>
  <script>
    //emojis - https://emojiterra.com/school-emojis/
    const buildings_or_faces = ["🏫", "✍️", "🤔", "💭"];
    const people = ["👨‍🏫", "👩‍🏫", "👩‍🎓", "👨‍🎓"];
    const books = ["📓", "📙", "📘", "📕", "📗", "📔", "📒", "📖"];
    const objects = ["📎", "🖇️", "💯", "📝", "📁", "🖊️"];
    const others = ["🎒", "🚌", "🎓", "✏️", "🖋️"];
    const emojis = [
      "🤔",
      "💭",
      "👨‍🎓",
      "👩‍🎓",
      "👨‍🏫",
      "👩‍🏫",
      "🏫",
      "🎒",
      "📔",
      "📕",
      "📖",
      "📚",
      "📓",
      "📑",
      "🔖",
      "✏️",
      "✒️",
      "🖋️",
      "🖊️",
      "🖍️",
      "📝",
    ];
    function emojiRandom() {
      document.getElementById("emojirandom").innerHTML =
        buildings_or_faces[Math.floor(Math.random() * 4)] +
        people[Math.floor(Math.random() * 4)] +
        books[Math.floor(Math.random() * 8)] +
        objects[Math.floor(Math.random() * 6)] +
        others[Math.floor(Math.random() * 5)];
    }
    emojiRandom();
    setInterval(() => {
      emojiRandom();
    }, Math.floor(Math.random() * 100 + 900));
    $(document).ready(() => {
      $("#title").hide().slideDown(1000);
      $("#emojirandom").hide().slideDown(1000);
      $("#subheading").hide().slideDown(1000);
      $(".signup").hide().slideDown(1000);
      $(".login").hide().slideDown(1000);
    });
  </script>
</html>
